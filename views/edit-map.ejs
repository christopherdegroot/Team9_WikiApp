<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" type="text/css" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap">
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="icon" href="../images/wikimap-icon.png" type="image/x-icon">
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/edit-map.css" type="text/css" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/interface.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <title>Edit WikiMap</title>
</head>

<body>

  <!-- side toggle bar -->
  <span id="side-nav">
    <div class="nav-content">
      <!-- logo -->
      <span>
        <span>
          <img class="logo" src="/images/WikiMap-logos-white.png">
        </span>
        <br>
        <br>
        <div>
          <!-- profile button -->
          <form method="GET" action="/profile/1">
            <button class="side-btn" type="submit">Profile</button>
          </form>
        </div>
      </span>
    </div>
  </span>

  <div id="profile-container">
    <!-- top navbar -->
    <header id="top-nav">
      <span class="expand">
        <i class="fa-solid fa-grip-lines"></i>
      </span>
      <button class="top-btn">Create Pin üìç</button>
    </header>

    <main id="main-content">
      <div class="marker-container">
          <div class="marker-list-container">
             <!-- map title & rating -->
            <div class="list-title">
              <form method="POST" action="/maps/:id/edit">
                <label for="map_title">Edit: Map Title</label>
                <br>
                <br>
                <input type="text" name ="map_title">
                <br>
                <br>
                <label for="map_category">Category</label>
                <br>
                <br>
                <input type="text" name ="map_category">
                <br>
                <br>
                <label for="map_description">Description</label>
                <br>
                <br>
                <textarea type="text" name="map_description"></textarea>
                <br>
                <br>
                <button class="new-btn" type="submit">Edit</button>
              </form>
            </div>
            <!-- list of markers -->
            <div class="list">
              <label for="pin-list"><strong>Pins</strong></label>
              <ul>
                <li><a href="#">pin1</a></li>
                <li><a href="#">pin2</a></li>
                <li><a href="#">pin3</a></li>
                <li><a href="#">pin4</a></li>

              </ul>
            </div>
          </div>

           <!-- new marker form -->
          <div class="new-marker">
            <form action="/markers/new" method="POST" id="new-marker">
              <label for="marker_title"><strong>New</strong> Pin Title </label>
              <br>
              <br>
              <input type="text" name="marker_title">
              <br>
              <br>
              <label for="image_url">Image URL</label>
              <br>
              <br>
              <input type="url" name="image_url">
              <br>
              <br>
              <label for="description">Description:</label>
              <br>
              <br>
              <textarea type="text" name="description"></textarea>
              <br>
              <br>
              <input type="hidden" name="marker_latitude" id="lat">
              <input type="hidden" name="marker_longitude" id="long">
              <button class="new-btn" type="submit">Add Pin</button>
            </form>
          </div>

          <!-- new marker form -->
          <div class="edit-marker" value="visible">
            <form action="/maps/:id/edit" method="POST" id="edit-marker">
              <label for="new-marker-title"><strong>Edit:</strong> Pin Title </label>
              <br>
              <br>
              <input type="text" name="new-marker-title">
              <br>
              <br>
              <label for="img-url">Image URL</label>
              <br>
              <br>
              <input type="url" name="img-url">
              <br>
              <br>
              <label for="marker_longitude">Longitude</label>
              <br>
              <br>
              <input type="number" name="marker_longitude">
              <br>
              <br>
              <label for="marker_latitude">Latitude</label>
              <br>
              <br>
              <input type="number" name="marker_latitude">
              <br>
              <br>
              <label for="description">Description</label>
              <br>
              <br>
              <textarea type="text" name="description"></textarea>
              <br>
              <br>
              <br>
              <button class="new-btn" type="submit">Edit Pin</button>
            </form>
          </div>




      </div>

      <!-- google map API-->
      <div class="map-container">
        <div id="map_canvas"></div>
        <!-- Async script executes immediately and must be after any DOM elements used in callback. -->
        <script
          src="https://maps.googleapis.com/maps/api/js?key=<%=process.env.DB_GOOGLE_API%>&callback=initMap&libraries=&v=weekly"
          async>
        </script>
      </div>

    </main>
  </div>
</body>
</html>
